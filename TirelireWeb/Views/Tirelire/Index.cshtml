<!--access model with lowercase-->
@model List<Produit>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Liste des Tirelires
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Tirelire" asp-action="Upsert" class="btn btn-dark">
                <i class="bi bi-plus-square"></i> Ajouter un Tirelire
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Nom du Tirelire
                </th>
                <th>
                    Description
                </th>
                <th>Fabricant</th>
            </tr>
        </thead>
        <tbody>
            <!--retrieve data from model with Uppercase "Model"-->
            @foreach (var obj in Model)
            {
                <tr>
                    <td><img src="@obj.ImageUrl" width="40" height="40"/></td>
                    <td>@obj.Title</td>
                    <td>
                        @obj.Description
                    </td>
                    <td>@obj.Fabricant?.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Tirelire" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Tirelire" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
